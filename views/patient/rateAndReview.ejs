<div class="container rate-review-view bg-color-grey">
    <h1 class="page-title center">Rate and Review</h1>
    <div class="rate-title">
        <div class="rate-doctor" data-did="<%= appointment[0].doctor.id %>" data-uid="<%= appointment[0].user_id %>">
            <%= appointment[0].doctor.name %>
        </div>
        <div class="rate-score">
            <div id="averageScore"></div>
            <div id="averageScore-text">0.0</div>
        </div>
    </div>
    <div class="rate-score-percentage">
        <div class="percentage-bar">
            <div class="percentage-content star-5"></div>
        </div>
        <div>5.0</div>
    </div>
    <div class="rate-score-percentage">
        <div class="percentage-bar">
            <div class="percentage-content star-4"></div>
        </div>
        <div>4.0</div>
    </div>
    <div class="rate-score-percentage">
        <div class="percentage-bar">
            <div class="percentage-content star-3"></div>
        </div>
        <div>3.0</div>
    </div>
    <div class="rate-score-percentage">
        <div class="percentage-bar">
            <div class="percentage-content star-2"></div>
        </div>
        <div>2.0</div>
    </div>
    <div class="rate-score-percentage">
        <div class="percentage-bar">
            <div class="percentage-content star-1"></div>
        </div>
        <div>1.0</div>
    </div>

    <div class="text-center mt-30">Share your experience to help others</div>
    <div class="rate-wrap">
        <div id="rateYo"></div>
        <div id="rateScore"></div>
    </div>
    <div class="rate-editor">
        <textarea id="reviewContext"></textarea>
    </div>
    <div class="text-right">
        <button class="btn btn-success" id="postReview">Post</button>
    </div>

    <div class="mt-30 mb-10">Search reviews</div>
    <div class="search-bar">
        <input class="search-input" type="text" />
        <div class="search-btn"><i class="bi bi-search"></i></div>
    </div>
    <div class="mt-30 mb-10">Sort by</div>
    <div class="sorting-list display-flex-start">
        <div class="sorting-item active" data-text="newest">Newest</div>
        <div class="sorting-item" data-text="highest">Highest</div>
        <div class="sorting-item" data-text="lowest">Lowest</div>
    </div>
    <div class="review-list">
        <!-- review items here-->
    </div>
</div>
