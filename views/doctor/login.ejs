<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body shadow p-3 mb-5 bg-white rounded" style="background-image: url(https://digitalsynopsis.com/wp-content/uploads/2017/03/beautiful-color-gradients-backgrounds-078-cochiti-lake.png);background-repeat: no-repeat;background-size: cover;">
        <div class="row">
<div class="col-sm-4 col-3 m-auto">
        <img src="https://img.freepik.com/free-vector/doctor-character-background_1270-84.jpg?size=338&ext=jpg" style="border-radius: 100%;" class="card-img-top">
</div>
</div>
        <h1 class="text-center mb-3" style="color: rgb(65, 78, 255);"><i class="fas fa-sign-in-alt"></i>  Login</h1>
        <%- include ("../partials/messages"); %>
        <form action="/doctor/login" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block" style="background-color: rgb(93, 93, 247);outline: none;border: none;">Login</button>
        </form>
        <p class="lead mt-4">
          No Account? <a href="/doctor/register" style="color: blue;">Register</a>
        </p>
      </div>
    </div>
  </div>